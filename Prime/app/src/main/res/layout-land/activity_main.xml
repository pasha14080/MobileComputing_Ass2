<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.itzpulu.prime.MainActivity"
    tools:ignore="Overdraw"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Message"
        android:textStyle="bold"
        android:textSize="25sp"
        android:id="@+id/Text"
        android:layout_marginStart="80dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/Pass"
        android:id="@+id/pass"
        android:onClick="ChangeText"
        android:layout_below="@+id/Cheat"
        android:layout_alignStart="@+id/Incorrect" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/Correct"
        android:id="@+id/Correct"
        android:onClick="check_Correctness"
        android:layout_above="@+id/Incorrect"
        android:layout_alignEnd="@+id/Incorrect" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/Incorrect"
        android:id="@+id/Incorrect"
        android:onClick="check_incorrectness"
        android:layout_above="@+id/Hint"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/Hint"
        android:id="@+id/Hint"
        android:onClick="OnHint"
        tools:ignore="RelativeOverlap"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Cheat"
        android:id="@+id/Cheat"
        android:layout_below="@+id/Hint"
        android:layout_alignEnd="@+id/pass"
        android:layout_alignStart="@+id/pass"
        android:onClick="OnCheat"/>

</RelativeLayout>
